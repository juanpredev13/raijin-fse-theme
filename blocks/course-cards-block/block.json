{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "raijin/course-cards-block",
    "version": "1.0.0",
    "title": "Course Cards",
    "category": "design",
	"icon": "grid-view",
	"description": "Display course cards in a grid layout",
    "supports": {
        "html": false,
        "align": ["wide", "full"]
    },
	"attributes": {
		"title": {
			"type": "string",
			"default": "Recommended for you"
		},
		"showSeeAll": {
			"type": "boolean",
			"default": true
		},
		"courses": {
			"type": "array",
			"default": [
				{
					"id": 1,
					"imageUrl": "",
					"category": "Design",
					"duration": "3 Month",
					"courseTitle": "AWS Certified solutions Architect",
					"description": "Lorem ipsum dolor sit amet, consectetur adipising elit, sed do eiusmod tempor",
					"instructor": "Lina",
					"instructorImage": "",
					"regularPrice": "100",
					"salePrice": "80"
				}
			]
		},
		"columns": {
			"type": "number",
			"default": 4
		}
	},
    "textdomain": "course-cards-block",	
    "editorScript": "file:./index.js",
    "editorStyle": "file:./index.css",
    "style": "file:./style-index.css",
    "viewScript": "file:./view.js"
}